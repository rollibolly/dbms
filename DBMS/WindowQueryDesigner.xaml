<Window x:Class="DBMS.WindowQueryDesigner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBMS"
        mc:Ignorable="d"
        Title="Query Designer" Height="400" Width="500" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="label" Content="Select database:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.052,1.055" Margin="10,10,0,0"/>
        <ComboBox x:Name="comboBoxDBs" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="111,13,0,0" SelectionChanged="comboBoxTables_SelectionChanged"/>
        <Button x:Name="btnAddTable" Content="Add table
                " HorizontalAlignment="Left" Margin="169,98,0,0" VerticalAlignment="Top" Width="62" Click="btnAddTable_Click_1"/>
        <Label x:Name="label1" Content="Select table:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.427,0.016" Width="96"/>
        <ComboBox x:Name="comboBoxTables" HorizontalAlignment="Left" Margin="111,44,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBlockTables" HorizontalAlignment="Left" Height="285" Margin="290,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194"/>
        <GroupBox x:Name="groupBox" Header="" HorizontalAlignment="Left" Margin="10,-4,0,0" VerticalAlignment="Top" Height="148" Width="265"/>
        <GroupBox x:Name="groupBox1" Header="GroupBox" HorizontalAlignment="Left" Margin="10,164,0,0" VerticalAlignment="Top" Width="265" Height="196">
            <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="71" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220"/>
        </GroupBox>
    </Grid>
</Window>
