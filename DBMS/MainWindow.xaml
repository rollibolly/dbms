<Window x:Class="DBMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBMS"
        mc:Ignorable="d"
        Title="MainWindow" Height="792.404" Width="1045.325">
    <Grid>
        <TreeView x:Name="treeView" 
                  HorizontalAlignment="Left" 
                  Height="646" 
                  Margin="10,67,0,0" 
                  VerticalAlignment="Top" 
                  Width="217" SelectedItemChanged="treeView_SelectedItemChanged" ContextMenuOpening="treeView_ContextMenuOpening"
            >

        </TreeView>
        <Button x:Name="btnCreateDatabase" Content="Create Database" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Width="96" Click="btnCreateDatabase_Click"/>
        <RichTextBox x:Name="richTextBox" HorizontalAlignment="Left" Height="418" Margin="268,67,0,0" VerticalAlignment="Top" Width="697">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="268,504,0,0" VerticalAlignment="Top" Height="209" Width="697"/>

    </Grid>
</Window>
