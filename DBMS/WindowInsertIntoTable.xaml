<Window x:Class="DBMS.WindowInsertIntoTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBMS"
        mc:Ignorable="d"
        Title="WindowInsertIntoTable" Height="300" Width="530.72">
    <Grid>
        <DataGrid x:Name="dataGridInsertTable" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Height="135" Width="503" AutoGenerateColumns="False" ItemsSource="{Binding}"/>
        <Button x:Name="btnAddRowForGridInsertTable" Content="Add row" HorizontalAlignment="Left" Margin="331,239,0,0" VerticalAlignment="Top" Width="75" Click="btnAddRowForGridInsertTable_Click"/>
        <Button x:Name="btnInsertRows" Content="Insert" HorizontalAlignment="Left" Margin="438,239,0,0" VerticalAlignment="Top" Width="75" Click="btnInsertRows_Click"/>

    </Grid>
</Window>
